<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".quiz.Questionnaire2_Activity">

	<Button
			android:text="Continue"
			android:layout_width="338dp"
			android:layout_height="60dp" android:id="@+id/sector_continue_BUTTON"
			app:layout_constraintTop_toBottomOf="@+id/_dynamic"
			app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"/>
	<TextView
			android:text="Which industry sector(s) is your company specialized in?"
			android:layout_width="wrap_content"
			android:layout_height="83dp" android:id="@+id/textView10"
			android:fontFamily="@font/open_sans_bold" android:textSize="24sp"
			android:foregroundGravity="center" android:gravity="center"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
			app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="68dp"/>
	<RadioGroup
			android:layout_width="353dp"
			android:layout_height="443dp"
			android:orientation="horizontal"
			app:layout_constraintTop_toBottomOf="@+id/textView10"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent" android:id="@+id/radioGroup" android:layout_marginTop="24dp">

				<RadioButton
						android:text="Food"
						android:layout_width="154dp"
						android:layout_height="170dp"
						android:id="@+id/radioButton"
						android:drawableTop="@drawable/apple"
						android:gravity="center"
						android:fontFamily="@font/alfa_slab_one"
						android:button="@android:color/transparent"
						android:background="@drawable/radio_selector"
						android:textColor="@drawable/text_color"
						android:elevation="4dp"
						android:layout_marginTop="10dp"
						android:layout_marginLeft="20dp"
						android:layout_marginStart="20dp"/>
				<RadioButton
						android:text="Argiculture and Production"
						android:layout_width="154dp"
						android:layout_height="170dp"
						android:id="@+id/radioButton3"
						android:drawableTop="@drawable/planting"
						android:gravity="center"
						android:fontFamily="@font/alfa_slab_one"
						android:button="@android:color/transparent"
						android:background="@drawable/radio_selector"
						android:textColor="@drawable/text_color"
						android:elevation="4dp"
						android:layout_marginLeft="16dp"
						android:layout_marginStart="16dp"/>



	</RadioGroup>


</androidx.constraintlayout.widget.ConstraintLayout>