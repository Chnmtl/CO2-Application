<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".PhoneVerification" android:padding="16dp">
	<ImageView
			android:layout_width="312dp"
			android:layout_height="248dp" app:srcCompat="@drawable/clearco2_outline_png"
			android:id="@+id/imageView4"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.494"
			app:layout_constraintVertical_bias="0.086"/>
	<EditText
			android:layout_width="268dp"
			android:layout_height="50dp"
			android:inputType="number"
			android:ems="10"
			android:id="@+id/phoneNumberTextBox"
			android:background="@drawable/text_inout_bg"
			app:layout_constraintTop_toBottomOf="@+id/textView3" android:layout_marginTop="24dp"
			android:fontFamily="@font/open_sans_bold" android:hint="Your phone Number"
			android:foregroundGravity="center" android:gravity="center" app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="16dp" android:layout_marginRight="16dp"/>
	<TextView
			android:text="Verify Your Phone Number"
			android:layout_width="348dp"
			android:layout_height="41dp" android:id="@+id/textView2"
			app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
			android:foregroundGravity="center" android:gravity="center"
			android:fontFamily="@font/open_sans_bold" android:textColor="#000000" android:textSize="22sp"
			app:layout_constraintTop_toTopOf="@+id/imageView4" android:layout_marginTop="200dp"
			app:layout_constraintHorizontal_bias="0.507"/>
	<TextView
			android:text="Please enter your Country Code and Phone number for verification."
			android:layout_width="357dp"
			android:layout_height="50dp" android:id="@+id/textView3"
			android:textSize="16sp" android:fontFamily="@font/open_sans_semibold"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent" android:foregroundGravity="top|center"
			android:gravity="center|top" app:layout_constraintTop_toTopOf="@+id/imageView4"
			android:layout_marginTop="235dp"/>
	<EditText
			android:layout_width="64dp"
			android:layout_height="50dp"
			android:inputType="number"
			android:ems="10"
			android:id="@+id/prefixTextBox"
			android:background="@drawable/text_inout_bg"
			android:fontFamily="@font/open_sans_bold" android:hint="+30" android:foregroundGravity="center"
			android:gravity="center" app:layout_constraintTop_toTopOf="@+id/phoneNumberTextBox"
			app:layout_constraintBottom_toBottomOf="@+id/phoneNumberTextBox"
			app:layout_constraintVertical_bias="0.0"
			app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="24dp"
			android:layout_marginStart="24dp" app:layout_constraintEnd_toStartOf="@+id/phoneNumberTextBox"
			android:layout_marginEnd="6dp" android:layout_marginRight="6dp"/>
	<Button
			android:text="CONTINUE"
			android:layout_width="338dp"
			android:layout_height="60dp" android:id="@+id/continueBTN"
			app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/phoneNumberTextBox"
			app:layout_constraintVertical_bias="0.031"
			app:backgroundTint="#707079" app:layout_constraintHorizontal_bias="0.575"/>
</androidx.constraintlayout.widget.ConstraintLayout>