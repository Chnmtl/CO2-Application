<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".OTPVerification_Activity">

	<TextView
		android:id="@+id/resendTEXT"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="13dp"
		android:layout_marginLeft="13dp"
		android:fontFamily="@font/open_sans_semibold"
		android:text="Resend OTP"
		android:textColor="#0088F4"
		android:textSize="14sp"
		android:textStyle="bold"
		app:layout_constraintStart_toEndOf="@+id/textView7"
		app:layout_constraintTop_toTopOf="@+id/textView7" />

	<TextView
		android:id="@+id/textView7"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="16dp"
		android:fontFamily="@font/open_sans_semibold"
		android:text="Didn't received OTP?"
		android:textColor="#707070"
		android:textSize="14sp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.303"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/verifyBTN" />

	<Button
			android:text="VERIFY OTP"
			android:layout_width="338dp"
			android:layout_height="60dp" android:id="@+id/verifyBTN"
			app:layout_constraintTop_toBottomOf="@+id/otpTextBox" app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"/>
	<TextView
			android:text="Enter your OTP verification code"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/textView"
			app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="180dp"
			android:fontFamily="@font/open_sans_bold" android:textSize="24sp"/>
	<TextView
			android:text="We have sent a message to:"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/textView4"
			app:layout_constraintTop_toBottomOf="@+id/textView"
			android:layout_marginTop="24dp" app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent" android:fontFamily="@font/open_sans_semibold"
			android:textSize="14sp"/>

	<TextView
		android:id="@+id/otpPhoneNumber"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:fontFamily="@font/open_sans_semibold"
		android:text="AAA"
		android:textStyle="bold"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/textView4" />
	<EditText
			android:layout_width="250dp"
			android:layout_height="50dp"
			android:inputType="number"
			android:ems="10"
			android:id="@+id/otpTextBox"
			app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/otpPhoneNumber"
			android:layout_marginTop="32dp" android:hint="Enter your OTP" android:foregroundGravity="center"
			android:gravity="center" android:fontFamily="@font/open_sans_bold" android:textStyle="bold"/>
</androidx.constraintlayout.widget.ConstraintLayout>