<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".quiz.Questionnaire5_Activity">

	<RadioGroup
		android:id="@+id/why_group"
		android:layout_width="360dp"
		android:layout_height="234dp"
		android:layout_marginTop="60dp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/textView14">

		<RadioButton
			android:id="@+id/level_one"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_marginStart="3dp"
			android:layout_marginLeft="3dp"
			android:layout_marginTop="20dp"
			android:layout_marginEnd="3dp"
			android:layout_marginRight="3dp"
			android:background="@drawable/radio_selector"
			android:button="@android:color/transparent"
			android:elevation="4dp"
			android:gravity="center"
			android:text="Optimize my CSR strategies for carbon reduction and offsetting"
			android:textColor="@drawable/text_color" />

		<RadioButton
			android:id="@+id/level_two"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_marginStart="3dp"
			android:layout_marginLeft="3dp"
			android:layout_marginTop="20dp"
			android:layout_marginEnd="3dp"
			android:layout_marginRight="3dp"
			android:background="@drawable/radio_selector"
			android:button="@android:color/transparent"
			android:elevation="6dp"
			android:gravity="center"
			android:text="Optimize my supply chain and slave energy costs"
			android:textColor="@drawable/text_color" />

		<RadioButton
			android:id="@+id/level_three"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_marginStart="3dp"
			android:layout_marginLeft="3dp"
			android:layout_marginTop="20dp"
			android:layout_marginEnd="3dp"
			android:layout_marginRight="3dp"
			android:background="@drawable/radio_selector"
			android:button="@android:color/transparent"
			android:elevation="8dp"
			android:gravity="center"
			android:text="Report my carbon footprint for compliance to regulations(EU ETS,..)"
			android:textColor="@drawable/text_color" />
	</RadioGroup>

	<TextView
			android:text="Why do you want to calculate your carbon footprint?"
			android:layout_width="400dp"
			android:layout_height="83dp" android:id="@+id/textView14"
			android:textColor="#707070"
			android:fontFamily="@font/open_sans_bold" android:textSize="24sp"
			android:foregroundGravity="center" android:gravity="center" app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="108dp"
			app:layout_constraintHorizontal_bias="0.454"/>

	<Button
		android:id="@+id/last_continue_BUTTON"
		android:layout_width="338dp"
		android:layout_height="60dp"
		android:layout_marginTop="150dp"
		android:text="Continue"
		app:backgroundTint="#707079"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.493"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/why_group"
		app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>