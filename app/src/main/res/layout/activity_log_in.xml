<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LogInActivity">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="179dp"
            android:src="@drawable/ck__clearkarma_logo"
            android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.48" android:contentDescription="TODO"/>
    <TextView
            android:text="EMAIL"
            android:layout_width="80dp"
            android:layout_height="20dp" android:id="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            android:layout_marginTop="60dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="9dp"
            android:layout_marginStart="9dp"/>
    <EditText
            android:layout_width="393dp"
            android:layout_height="50dp"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/emailTextBox"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:hint="Enter your email address"/>
    <TextView
            android:text="PASSWORD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/emailTextBox"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="9dp"
            android:layout_marginStart="9dp" android:layout_marginTop="16dp"/>
    <EditText
            android:layout_width="393dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwordTextBox"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            android:hint="Enter your password"/>
    <CheckBox
            android:text="REMEBER ME"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/rememberCheckBox"
            app:layout_constraintTop_toBottomOf="@+id/passwordTextBox"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="9dp"
            android:layout_marginStart="9dp" android:layout_marginTop="16dp"/>
    <Button
            android:text="LOG IN"
            android:layout_width="393dp"
            android:layout_height="wrap_content" android:id="@+id/logInButton"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rememberCheckBox" android:layout_marginTop="8dp"
            android:background="#7EC353" app:backgroundTint="#7EC353"/>
    <TextView
            android:text="Don't have an account yet?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/creatAccountButton"/>
    <Button
            android:text="CREAT AN ACCOUNT"
            android:layout_width="393dp"
            android:layout_height="wrap_content"
            android:background="@drawable/creat_account_button_style"
            android:id="@+id/creatAccountButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/black"/>

</androidx.constraintlayout.widget.ConstraintLayout>