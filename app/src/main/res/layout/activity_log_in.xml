<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LogInActivity" android:background="@drawable/gradient">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="179dp"
            android:src="@drawable/ck__clearkarma_logo"
            android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.48" android:contentDescription="TODO"/>
    <EditText
            android:layout_width="393dp"
            android:layout_height="50dp"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/emailTextBox"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="  Enter your email address" android:textColor="#000000"
            android:background="@drawable/transparent"
            android:autoText="false"
            android:hapticFeedbackEnabled="false" android:drawableLeft="@drawable/name"
            android:paddingLeft="13dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" android:layout_marginTop="100dp"/>
    <EditText
            android:layout_width="393dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwordTextBox"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="  Enter your password" android:background="@drawable/transparent"
            android:drawableLeft="@drawable/padlock"
            android:paddingLeft="13dp"

            app:layout_constraintTop_toBottomOf="@+id/emailTextBox" android:layout_marginTop="40dp"/>
    <Button
            android:text="LOG IN"
            android:layout_width="393dp"
            android:layout_height="wrap_content" android:id="@+id/logInButton"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/round" app:backgroundTint="#FFFFFF" android:textColor="#000000"
            app:layout_constraintTop_toBottomOf="@+id/passwordTextBox" android:layout_marginTop="44dp"
    />
    <TextView
            android:text="Register Here."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/registerText"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logInButton" android:layout_marginTop="24dp"
            android:clickable="true" android:linksClickable="true" android:longClickable="false"
            android:textColorLink="#2196F3" android:textSize="18sp"
            android:textColor="@color/black"/>

</androidx.constraintlayout.widget.ConstraintLayout>