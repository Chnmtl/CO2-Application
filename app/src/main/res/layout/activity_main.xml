<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="#7EC353">
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="179dp"
            android:src="@drawable/ck__clearkarma_logo"
            android:id="@+id/imageView3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:contentDescription="TODO"
            android:layout_marginTop="92dp"/>
    <Button
            android:text="LOG IN"
            android:layout_width="350dp"
            android:layout_height="wrap_content" android:id="@+id/logInButton"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"
            android:layout_marginTop="84dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:backgroundTint="#FFFFFF" android:textColor="#000000" android:textSize="18sp"
            android:background="@drawable/round"/>
    <Button
            android:text="REGISTRATE"
            android:layout_width="350dp"
            android:layout_height="wrap_content" android:id="@+id/registrateButton"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:backgroundTint="#FFFFFF" android:textColor="#000000" android:textSize="18sp"
            app:layout_constraintHorizontal_bias="0.491" app:layout_constraintTop_toBottomOf="@+id/logInButton"
            android:layout_marginTop="32dp" android:background="@drawable/round"/>
</androidx.constraintlayout.widget.ConstraintLayout>