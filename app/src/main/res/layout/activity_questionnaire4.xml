<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".quiz.Questionnaire4_Activity">

	<TextView
			android:text="What is your experience in carbon footprinting?"
			android:layout_width="400dp"
			android:layout_height="83dp" android:id="@+id/textView13"
			android:fontFamily="@font/open_sans_bold" android:textSize="24sp"
			android:foregroundGravity="center" android:gravity="center" app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="110dp"/>
	<Button
			android:text="Continue"
			android:layout_width="338dp"
			android:layout_height="60dp" android:id="@+id/experience_continue_BUTTON"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintHorizontal_bias="0.493"
			app:layout_constraintTop_toBottomOf="@+id/_dynamic"/>

	<RadioGroup
		android:id="@+id/why_group"
		android:layout_width="360dp"
		android:layout_height="234dp"
		android:layout_marginTop="24dp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/textView13">

		<RadioButton
			android:id="@+id/level_one"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_marginStart="3dp"
			android:layout_marginLeft="3dp"
			android:layout_marginTop="20dp"
			android:layout_marginEnd="3dp"
			android:layout_marginRight="3dp"
			android:background="@drawable/radio_selector"
			android:button="@android:color/transparent"
			android:elevation="4dp"
			android:gravity="center"
			android:text="I have no prior knowledge of the carbon footprinting process"
			android:textColor="@drawable/text_color" />

		<RadioButton
			android:id="@+id/level_two"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_marginStart="3dp"
			android:layout_marginLeft="3dp"
			android:layout_marginTop="20dp"
			android:layout_marginEnd="3dp"
			android:layout_marginRight="3dp"
			android:background="@drawable/radio_selector"
			android:button="@android:color/transparent"
			android:elevation="6dp"
			android:gravity="center"
			android:text="I have done some carbon footprinting process"
			android:textColor="@drawable/text_color" />

		<RadioButton
			android:id="@+id/level_three"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_marginStart="3dp"
			android:layout_marginLeft="3dp"
			android:layout_marginTop="20dp"
			android:layout_marginEnd="3dp"
			android:layout_marginRight="3dp"
			android:background="@drawable/radio_selector"
			android:button="@android:color/transparent"
			android:elevation="8dp"
			android:gravity="center"
			android:text="I have already calculated my carbon footprint"
			android:textColor="@drawable/text_color" />
	</RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>