<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:padding="16dp">

	<ImageView
			android:id="@+id/image"
			android:layout_width="99dp"
			android:layout_height="96dp"/>

	<TextView
			android:id="@+id/txtName"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			style="@style/TextAppearance.AppCompat.Title"
			android:text="Name" android:foregroundGravity="center" android:gravity="center"
			android:layout_toEndOf="@+id/image" android:layout_toRightOf="@+id/image" android:layout_marginLeft="1dp"
			android:layout_marginStart="1dp" android:layout_marginBottom="38dp"
			android:layout_alignBottom="@+id/image" android:layout_alignTop="@+id/image"
			android:layout_marginTop="31dp"/>

</RelativeLayout>